<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:strokeWidth="1dp"
    app:strokeColor="#DDDDDD">

    <LinearLayout
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvLabel"
            android:text="• 数值项（单位）"
            android:textStyle="bold" android:textSize="18sp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvRange"
            android:text="范围：- ~ -" android:textSize="13sp" android:textColor="#666"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <LinearLayout
            android:orientation="horizontal" android:layout_marginTop="8dp"
            android:layout_width="match_parent" android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnMinus"
                android:text="−" android:minWidth="56dp" android:minHeight="56dp" android:textSize="22sp"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/etValue"
                android:hint="0"
                android:inputType="numberDecimal|numberSigned"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
                android:layout_width="0dp" android:layout_height="56dp" android:layout_weight="1"/>

            <Button
                android:id="@+id/btnPlus"
                android:text="+" android:minWidth="56dp" android:minHeight="56dp" android:textSize="22sp"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal" android:layout_marginTop="6dp"
            android:layout_width="match_parent" android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnQuick1"
                android:text="+1" android:minHeight="48dp"
                android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
            <Button
                android:id="@+id/btnQuick5"
                android:text="+5" android:minHeight="48dp"
                android:layout_marginStart="6dp"
                android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
            <Button
                android:id="@+id/btnQuick10"
                android:text="+10" android:minHeight="48dp"
                android:layout_marginStart="6dp"
                android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
        </LinearLayout>
        <Button
            android:id="@+id/btnConfirmNumber"
            android:text="确认数值"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="12dp"
            android:textSize="18sp"
            android:backgroundTint="@color/teal_700"
            android:textColor="@android:color/white"
            android:layout_gravity="center" />
        <TextView
            android:id="@+id/tvStatus"
            android:text="状态：--" android:textSize="13sp"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>


    </LinearLayout>
</com.google.android.material.card.MaterialCardView>